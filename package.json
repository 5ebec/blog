{
  "name": "blog",
  "version": "0.1.0",
  "description": "heyhoe's pothooks",
  "repository": "https://github.com/5ebec/blog",
  "author": "5ebec <hash.a5ebec@gmail.com>",
  "license": "MIT",
  "private": true,
  "browserslist": [
    "last 2 versions",
    "> 2%",
    "not dead"
  ],
  "scripts": {
    "dev": "run-p serve css:dev",
    "serve": "julia -e 'using Pkg;Pkg.activate(\".\");using Franklin;serve(clear=true)'",
    "css:prod": "postcss theme/css/_style.pcss --dir _css --ext css --no-map",
    "css:dev": "postcss theme/css/_style.pcss --dir _css --ext css -w",
    "format": "prettier --write . -u"
  },
  "devDependencies": {
    "cssnano": "^4.1.10",
    "husky": "^4.3.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.1.8",
    "postcss-cli": "^8.3.0",
    "postcss-import": "^13.0.0",
    "postcss-preset-env": "^6.7.0",
    "prettier": "2.1.2"
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn format && yarn css:prod && git add . && git commit --amend --no-edit"
    }
  }
}
